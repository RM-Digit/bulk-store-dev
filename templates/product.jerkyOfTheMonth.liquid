<script>

  var selectCallback = function(variant, selector) {
    // BEGIN SWATCHES
    if (variant) {
      var form = jQuery('#' + selector.domIdPrefix).closest('form');
      for (var i=0,length=variant.options.length; i<length; i++) {
        var radioButton = form.find('.swatch[data-option-index="' + i + '"] :radio[value="' + variant.options[i] +'"]');

        if (radioButton.size()) {
          radioButton.get(0).checked = true;
        }
      }
    }
    // END SWATCHES

    timber.featuredProductPage({
      money_format: "{{ shop.money_format }}",
      variant: variant,
      selector: selector,
      translations: {
      add_to_cart : "{{ 'products.product.add_to_cart' | t }}",
      sold_out : "{{ 'products.product.sold_out' | t }}",
      unavailable : "{{ 'products.product.unavailable' | t }}"
    }
                               });
  };

  jQuery(function($) {
    new Shopify.OptionSelectors('productSelect', {
      product: {{ product | json }},
      onVariantSelected: selectCallback,
      enableHistoryState: true
    });

    // Add label if only one product option and it isn't 'Title'. Could be 'Size'.
    {% if product.options.size == 1 and product.options.first != 'Title' %}
    $('.selector-wrapper:eq(0)').prepend('<label for="productSelect-option-0"><img src="https://cdn.shopify.com/s/files/1/1110/8120/files/star1.png?15027341013309203670" /> {{ product.options.first | escape }}</label>');
                                         {% endif %}

                                         // Hide selectors if we only have 1 variant and its title contains 'Default'.
                                         {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
                                         $('.selector-wrapper').hide();
    {% endif %}
  });

  jQuery(document).ready(function(){
    var qty=$('#Quantity').val();
    jQuery('.incre').click(function(){ 
      qty++;
      jQuery('#Quantity').val(qty);   
      //Quantity increment
    });

    jQuery('.decre').click(function(){
      if(qty>1){
        qty--;
        jQuery('#Quantity').val(qty);
        //Quantity decrement
      }
    });

    // Get URL
    var currenturl= window.location.href;
    var beefUrl= 'http://bulk-test-store.myshopify.com/collections/beef-jerky';
    if(currenturl != beefUrl){
      jQuery( ".grid-link__title" ).remove();
    }
    //Getting Description
    var desc= jQuery('.product-description').html();
    jQuery('.description_left').html(desc);
    jQuery('.description_left .nutri_main').remove();
    jQuery('.product-description').contents(':not(.nutri_main)').remove();
  });

  // SWATCH
  jQuery(function() {
    jQuery('.swatch :radio').change(function() {
      var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
      var optionValue = jQuery(this).val();
      jQuery(this)
      .closest('form')
      .find('.single-option-selector')
      .eq(optionIndex)
      .val(optionValue)
      .trigger('change');
    });
  });

  $(".regular-size-1-4-lb-bags").find("label").html('<div class="JoTMLabel"><img class="JoTMImage floatLeft" style="margin-left:45px;" src="https://cdn.shopify.com/s/files/1/0429/9385/files/regularProduct.png?5001842710326801991"><div class="floatLeft JoTMLabelText"><div class="redText">REGULAR SIZE</div><div>THREE 1/4 LB BAGS</div></div></div><div class="clear"></div>');
  $(".b-u-l-k-size-1-2-lb-bags").find("label").html('<div class="JoTMLabel"><img class="JoTMImage floatLeft" src="https://cdn.shopify.com/s/files/1/0429/9385/files/largeProduct.png?6523092311493635955"><div class="floatLeft JoTMLabelText"><div class="redText">B.U.L.K. SIZE</div><div>THREE 1/2 LB BAGS</div></div></div><div class="clear"></div>');
  $(".pay-every-month").find("label").html('<div data-value="1" class="frequency-label floatLeft JoTMLabelText2 JoTMLabel"><div class="redText">PAY EVERY</div><div>MONTH</div></div>');
  $(".pay-every-3-months").find("label").html('<div data-value="3" class="frequency-label center JoTMLabelText2 JoTMLabel"><div class="redText">PAY EVERY</div><div>THREE MONTHS</div></div>');
  $(".pay-every-6-months").find("label").html('<div data-value="6" class="frequency-label center JoTMLabelText2 JoTMLabel"><div class="redText">PAY EVERY</div><div>SIX MONTHS</div></div>');
  $(".pay-every-12-months").find("label").html('<div data-value="12" class="frequency-label center JoTMLabelText2 JoTMLabel"><div class="redText">PAY EVERY</div><div>YEAR</div></div>');

  $(".frequency-label").on("click", function(){
    var value = $(this).data("value");
    console.log(value);
    $(".rc_select").find("select").val(value);
  });

  $(".rc_container").addClass("hidden");
</script>

