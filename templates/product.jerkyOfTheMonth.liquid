<div itemscope itemtype="http://schema.org/Product" class="westernFont">

  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">



  <div class="JotM-Header"><img src="{{ 'JotMHeader.png' | asset_url }}"></div>
  <div class="JotM-Header"><img src="{{ 'JotMTitle.png' | asset_url }}"></div>

  <div class="product-single blackBG">

    <div class="container12 featuredProductWrapper">


      <div class="product-rightpart" style="border:0px !important;">


        <div itemprop="offers" itemscope itemtype="http://schema.org/Offer">
          {% assign variant = product.variants.first %}
          {% for varianti in product.variants %}
          {% unless varianti.title contains '% Off' %}
          {% if varianti.available %} 
          {% assign variant = varianti %}
          {% break %}
          {% endif %}
          {% endunless %}
          {% endfor %}

          <meta itemprop="priceCurrency" content="{{ shop.currency }}">
          <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">



          <form action="/cart/add" data-productid="{{ product.id }}" method="post" enctype="multipart/form-data" id="AddToCartForm" class="addto" style="padding:15px;">

            <div class="featuredProductDescription" >
              {{ product.description }}
            </div>

            <div style="text-align:center;">
              <!-- Swatch -->
              {% if product.available and product.variants.size > 1 %}
              {% assign optionCount = product.options.size | minus:1 %}

              {% for i in (0..optionCount) %}
              {% if i == 0 %}
              <div class="productOption center">3 BAGS OF GOURMET JERKY EVERY MONTH. <span class="underlineText">JUST CHOOSE THE SIZE...</span></div>
              {% endif %}
              {% if i == 1 %}
              <div class="productOption center">...THEN CHOOSE YOUR <span class="underlineText">PAYMENT PLAN!</span></div>
              {% endif %}

              {% include 'swatch' with product.options[i] %}
              {% if i == 0 %}
              <img class="downArrowImg" src='{{ "downArrow.png" | asset_url }}'>
              {% endif %}
              {% endfor %}

              {% endif %}
              <!-- END Swatch -->
            </div>


            <select name="id" data-productid="{{ product.id }}" id="productSelect" class="" style="">
              {% for variant in product.variants %}


              {% if variant.available %}
              <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} data-sku="{{ variant.sku }}" data-price="{{ variant.price | money_without_currency | remove: ',' }}" value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money_with_currency }}</option>
              {% else %}

              <option disabled="disabled">
                {{ variant.title }} - {{ 'products.product.sold_out' | t }}
              </option>

              {% endif %}

              {% endfor %}    
            </select>
            <div class="clear"></div>

            <div class="hidden">
            {% if product.available %}{% include 'subscription-product' %}{% endif %} 
            </div>

            {% if product.compare_at_price > product.price %}
            <div style="margin-top:50px; height:68px;">
              <div id="ComparePriceWrapper" class="featuredProductSavings center" style="font-size:1.5em;display:none;">
                SAVE 
                <span id="ComparePrice" class="featuredProductSavings">
                </span>
                %
                {% endif %}

              </div>
            </div>

            <div class=" featuredProductPrice center" style="font-size:1.5em;">
              Your Subtotal:
              <span id="ProductPrice" class="featuredProductPrice" itemprop="price">
                {{ product.price | money }}
              </span>
            </div>


            <div class="product-single__quantity is-hidden">
              <label for="Quantity"><img alt="Quantity Star" src="https://cdn.shopify.com/s/files/1/1110/8120/files/star1.png?15027341013309203670" /> select {{ 'products.product.quantity' | t }}</label>
              <div class="qbtn">
                <div class=" udb decre">
                  <img src="https://cdn.shopify.com/s/files/1/1110/8120/files/uparrow.png?6218583712337790473" />
                </div>
                <div class="quantity-no">
                  <input type="text"  id="Quantity" name="quantity" value="1" min="1" class="quantity-selector">
                </div>
                <div class="udb incre">
                  <img src="https://cdn.shopify.com/s/files/1/1110/8120/files/downarrow.png?6218583712337790473" />
                </div>
              </div>
            </div>
            <div class="clear"></div>

            <input name="shopify_customer_id" type="hidden" value="{{ customer.id }}" > 
            <input name="email" type="hidden" value="{{ customer.email }}" > 
            <input name="address1" type="hidden" value="{{ customer.default_address.address1 }}" > 
            <input name="address2" type="hidden" value="{{ customer.default_address.address2 }}" > 
            <input name="city" type="hidden" value="{{ customer.default_address.city }}" > 
            <input name="company" type="hidden" value="{{ customer.default_address.company }}" > 
            <input name="country" type="hidden" value="{{ customer.default_address.country }}" > 
            <input name="first_name" type="hidden" value="{{ customer.default_address.first_name }}" > 
            <input name="last_name" type="hidden" value="{{ customer.default_address.last_name }}" > 
            <input name="phone" type="hidden" value="{{ customer.default_address.phone }}" > 
            <input name="province" type="hidden" value="{{ customer.default_address.province }}" > 
            <input name="zip" type="hidden" value="{{ customer.default_address.zip }}" >
            {% include 'bold-ro' with product %}





            <!--hr class="product-hr"-->
            <div style="text-align:center;">
              <div class="addToCartArrowLeft">
                <img class="" src="{{ 'addToCartArrowLeft.png' | asset_url }}">
              </div>
              {% if product.available %}



              <!-- Bold: Memberships (add to cart) -->
              {% include 'bold-memberships-addtocart' %}
              {% if bold_hide_item == false %}

              <!-- Addtocartbutton here -->
              <button type="submit" name="add" id="AddToCart" class="JoTMAddToCart">
                <!-- bold-ro-liquid --> <div class="bold_add_to_orders" style="display: inline-block;"> </div> <!-- bold-ro-liquid -->
                <span id="AddToCartText">{{ 'products.product.add_to_cart' | t }}</span>
              </button>

              {% endif %}
              <!-- end Bold code -->


              {% else %}
              <button type="btn" name="add" id="" class="btn disabled-sold" disabled>
                <!-- bold-ro-liquid --> <div class="bold_add_to_orders" style="display: inline-block;"> </div> <!-- bold-ro-liquid -->
                <span id="">Sold Out</span>
              </button>
              {% endif %}
              <div class="addToCartArrowRight">
                <img class="" src="{{ 'addToCartArrowRight.png' | asset_url }}">
              </div>
            </div>
          </form>


        </div>
      </div>

      <!--div class=" social-share"> 
<h1>Share on Social Media</h1>

</div-->



    </div>
  </div>
  <div class="clear"></div>

  <div class="clear"></div>
 {% comment %}
  <div class="related-products">
    <div class="container12">
     
      include 'new-related-products' %}
      
    </div>
  </div>
</div>
