<script>
  function resizeReviewBoxes()
  {
    var reviewBoxes      = $('.review-box');
    var largestBoxHeight = 20;
    for (var i = 0; i < reviewBoxes.length; i++) {
      $(reviewBoxes[i]).css('height','initial');
      var reviewBoxHeight = $(reviewBoxes[i]).height();

      if (reviewBoxHeight > largestBoxHeight) {
        largestBoxHeight = reviewBoxHeight + 20;
      }
    }
    for (var i = 0; i < reviewBoxes.length; i++) {
      $(reviewBoxes[i]).css('height', largestBoxHeight + 'px');
    }

    var reviewBoxReviews      = $('.review-box-review');
    var largestReviewHeight = 20;
    for (var i = 0; i < reviewBoxReviews.length; i++) {
      $(reviewBoxReviews[i]).css('height','initial');
      var reviewHeight = $(reviewBoxReviews[i]).height();

      if (reviewHeight > largestReviewHeight) {
        largestReviewHeight = reviewHeight;
      }
    }
    for (var i = 0; i < reviewBoxReviews.length; i++) {
      $(reviewBoxReviews[i]).css('height', largestReviewHeight + 'px');
    }
  }

  resizeReviewBoxes();
  $(window).resize(function(){
    resizeReviewBoxes();
  });


  function getUrlVars() {
    var vars = {};
    var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {
      vars[key] = value;
    });
    return vars;
  }


